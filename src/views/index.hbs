{{> navigation }}
<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Sistema Administrativo</li>
        </ol>
        <div class="alert bold alert-info">
            <i class="fas fw fa-plus-circle"></i>
            <a href="#" onClick="enviar('{{periodo.FECHA_PERIODO_FINAL}}', {{periodo_count.COUNT}})">
                <strong>¡Click Aquí para iniciar periodo contable!</strong>
            </a>
        </div>
    </div>
    <!-- Icon Cards-->
    <div class="container-fluid col-8 content-center">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-box"></i>
                <strong>Sistema Financiero</strong>
            </div>
            <div class="card-body">
                <div class="row bold">
                    <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/contabilidad_general'">
                        <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                            <div class="card-body">
                                <div class="mr-5">
                                    <i class="fas fa-balance-scale"></i>
                                    Contabilidad General
                                </div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="#">
                                <span class="float-left">Ver Detalles</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/">
                        <div class="card text-white" style="background-color:rgb(128, 128, 143)">
                            <div class="card-body">
                                <div class="mr-5">
                                    <i class="fas fa-chart-bar"></i>
                                    Contabilidad Costos
                                </div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/costeo/listar_materia_prima">
                                <span class="float-left">Ver Detalles</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    {{#if user.permiso}}
                    <div class="col-xl-6 col-sm-6 mb-4" onclick="window.location.href='/">
                        <div class="card text-white" style="background-color:rgb(20, 186, 241)">
                            <div class="card-body">
                                <div class="mr-5">
                                    <i class="fas fa-chart-line"></i>
                                    Analisis Financiero
                                </div>
                            </div>
                            <a class="card-footer text-white clearfix small z-1" href="/costeo/razones">
                                <span class="float-left">Ver Detalles</span>
                                <span class="float-right">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</div>
{{> footer }}
<script type="text/javascript">
        //funcion para validar que antes que cree un nuevo periodo deba cerrar el periodo actual
        function enviar(string, count){
                if(string != '' || count == 0){
                        window.location.href='/agregar_periodo';
                }
                else{
                        Swal.fire({
                                type: 'warning',
                                title: 'Permiso denegado',
                                text: 'Debe iniciar un nuevo periodo para poder ingresar a esta opción'
                        });
                }
        }
</script>